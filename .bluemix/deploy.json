{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
       "$i18n": "locales.yml"
    },
     "title": {
      "$ref": "#/messages/deploy.title"
    },
    "description": {
      "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
      "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
        "prod-region": {
            "description": "The IBM Cloud region",
            "type": "string",
	    "disabled": false
        },
       "api-key": {
            "description": {
              "$ref": "#/messages/deploy.apiKeyDescription"
            },
            "type": "string",
            "pattern": "\\S"
        },
       "registry-namespace": {
            "description": {
              "$ref": "#/messages/deploy.registryDescription"
            },
            "type": "string",
            "enum": [],
            "pattern": "^[a-z0-9][a-z0-9_]{3,29}$"
       },	    
       "prod-cluster-name": {
            "description": {
              "$ref": "#/messages/deploy.clusterDescription"
            },
            "type": "string",
            "pattern": "\\S",
	    "enum": [],
	    "disabled": false
        },
       "app-name": {
            "description": {
              "$ref": "#/messages/deploy.appDescription"
            },
            "type": "string",
            "pattern": "\\S"
        }
    },
    "required": ["registry-namespace", "prod-region", "api-key", "prod-cluster-name", "app-name"],
    "form": [
       {
          "type": "validator",
          "url": "/devops/setup/bm-helper/custom_helper.html"
       },{
          "type": "text",
          "readonly": false,
          "title": {
            "$ref": "#/messages/deploy.appName"
          },
          "key": "app-name"
        },{
	  "type": "password",
          "readonly": false,
          "title": {
            "$ref": "#/messages/deploy.apiKey"
          },
          "key": "api-key"
        },
	{
          "type": "select",
          "key": "prod-region",
	  "readonly": true,
           "title": {
            "$ref": "#/messages/region"
          }
        },{
          "key": "prod-cluster-name",
          "title": {
              "$ref": "#/messages/deploy.clusterName"
          }
        },{
          "type": "select",
          "readonly": false,
          "title": {
            "$ref": "#/messages/deploy.imageRegistryNamespace"
          },
          "key": "registry-namespace"
        }
    ]
}
