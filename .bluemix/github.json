        "items": [
            {
              "type": "label",
              "title": "Source Repository"
            },
            {
              "type": "label",
              "title": ""
            },
            {
              "type": "label",
              "title": "Target Repository"
            },
            {
              "type": "text",
              "key": "hello-world-repo_url"
            },
            {
              "type": "icon",
              "iconType": "right_arrow"
